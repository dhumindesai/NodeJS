<article class="event">
  <h1>{{ event.title }}</h1> 
  <p class = "description">{{event.description}}</p>
  <p class="date">{{event.startTime}}</p>
  <a href="/locations/{{location.id}}" class = "location">{{location.name}}--{{location.location}}</a>
  {{#if attendees.length}}
    <h3>Attendees</h3>
    <ul>
      {{#each attendees}}
        <li><a href="/people/{{this.id}}">{{this.name}}</a></li>
      {{/each}}
    </ul>
  {{/if}}
</article>