<div class="row">
  <div class="col-sm-12">
    <form id="static-form" method="post">
           <div class="form-group">
        <label for="txt">Text</label>
        <textarea class="form-control" id="txt" rows="10" name="txt" placeholder="text" >{{text}}</textarea>
      </div>
      <div class="form-group">
        <label for="str">String</label>
        <input type="text" class="form-control" id="str" name="str" placeholder="String" value="{{str}}">
      </div>
      <div class="form-group">
        <label for="counts">Counts</label>
        <input type="number" class="form-control" id="counts" name="counts" placeholder="Counts" value="{{counts}}">
      </div>
      <div class="form-group">
        <label for="index">Index</label>
        <input type="number" class="form-control" id="index" name="index" placeholder="Index" value="{{index}}">
      </div>
      <div class="form-group hidden" id="error-container">
        <div class="alert alert-danger text-goes-here">
        </div>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-default">Submit</button>
      </div>
      <div class="form-group hidden" id="result-container">
        <div class="alert alert-success text-goes-here">
        </div>
      </div>
    </form>
  </div>
</div>